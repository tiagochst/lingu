<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources.messages</param-value>
    </context-param>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jdbc</servlet-name>
        <servlet-class>controller.jdbc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvaliacaoServlet</servlet-name>
        <servlet-class>controller.AvaliacaoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jdbc</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
        <url-pattern>/AvaliaArtigo</url-pattern>
        <url-pattern>/AreaUsuario</url-pattern>
        <url-pattern>/AreaPalestrante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvaliacaoServlet</servlet-name>
        <url-pattern>/AvaliacaoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Database for lingu application</description>
        <res-ref-name>jdbc/mc536</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header_home.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/cadastro.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header_cadastro.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
               <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/upload.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header_upload.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
